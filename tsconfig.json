{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": false,
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["vitest/globals", "happy-dom", "@testing-library/jest-dom"]
  },
  "include": ["src", "test"]
}
